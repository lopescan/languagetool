commands:
  01_ngram_data_setup:
    command:  "if [ '$(ls -A $DIR)' ]
               then
                    mkdir /opt/test
               else
                   mkdir /opt/ngram-data /opt/ngram-data/en
                   chmod 777 -R /opt/ngram-data
                   aws s3 cp s3://lt-ngram-data/ngrams-en-20150817.zip /opt/ngram-data/
                   unzip /opt/ngram-data/ngrams-en-20150817.zip -d /opt/ngram-data/en"

    ignoreErrors: false